// tsconfig.json
{
  "compilerOptions": {
    "target": "es2022", // Or your desired target, can be older    "module": "commonjs", // Standard for Node.js
    "lib": ["dom", "dom.iterable", "es2023"], // Add or update this line
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "resolveJsonModule": true, // Allows importing JSON files
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*" // Specifies which files to include in compilation
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // Exclude test files if you have them
  ]
}
